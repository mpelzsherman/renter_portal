= form_for @landlord do |f|
  - if @landlord.errors.any?
    #error_explanation
      %h2= "#{pluralize(@landlord.errors.count, "error")} prohibited this landlord from being saved:"
      %ul
        - @landlord.errors.full_messages.each do |msg|
          %li= msg
  %div
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true
  = f.fields_for :account do |a|
    %div
      = a.label :first_name
      %br/
      = a.text_field :first_name
    %div
      = a.label :last_name
      %br/
      = a.text_field :last_name
    %div
      = a.label :street
      %br/
      = a.text_field :street
    %div
      = a.label :city
      %br/
      = a.text_field :city
    %div
      = a.select(:state, Rails.configuration.states)

  .actions
    = f.submit 'Save'
