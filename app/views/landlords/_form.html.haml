= form_for @landlord do |f|
  - if @landlord.errors.any?
    #error_explanation
      %h2= "#{pluralize(@landlord.errors.count, "error")} prohibited this landlord from being saved:"
      %ul
        - @landlord.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
