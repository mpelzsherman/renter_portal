= form_for @service_request, url: tenant_service_requests_path(tenant_id: current_tenant.id) do |f|
  - if @service_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service_request.errors.count, "error")} prohibited this service_request from being saved:"
      %ul
        - @service_request.errors.full_messages.each do |msg|
          %li= msg
  %div
    = f.select :status, ServiceRequest.status.options
  %div
    %br/
    = f.text_area :content, autofocus: true, rows: 10, cols: 80, class: "span8"
  .actions
    = f.submit 'Save'